<script>
    window.setInterval('refresh()', 5000);

    function refresh() {
        window .location.reload();
    }
</script>
<div class="game-title">
  <h1>Game: <%= @game.title %></h1>
  <h1>Player1: <%= @player1.email %></h1>
  <% if !@game.bookings[1].nil?%>
    <h1>Player2: <%= @game.bookings[1].user.email %></h1>
  <% end  %>
</div>
<% if @user == @player1 %>
  <% if @game.turn.even? %>
    <% if @game.finished %>
      <% if @game.turn == 9 %>
        <div class="YW">
          <h1>¡Draw!</h1>
        </div>
      <% else %>
        <div class="YW">
          <h1>¡You Won!</h1>
        </div>
      <% end %>
