        <div class="join">
          <%= link_to games_path  do %>
            <h1> Join game </h1>
          <% end %>
        </div>
        <div class="create">
          <%= link_to new_game_path do %>
            <h1> Create game </h1>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="board">
        <% @board.each_with_index do |box, index| %>
          <% if box == "" %>
            <%= link_to change_turn_game_path(@game, index: index ), method: :patch, class: "" do %>
              <div class="box"><h1><%= box %></h1></div>
            <% end %>
          <% else %>
            <div class="box"><h1><%= box %></h1></div>
